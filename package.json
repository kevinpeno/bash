{
  "name": "bash",
  "description": "Card game library",
  "version": "1.0.0",
  "author": "Kevin Peno <kevinpeno@gmail.com>",
  "license": "Unlicense",
  "bugs": {
    "url": "https://github.com/kevinpeno/bash/issues"
  },
  "homepage": "https://github.com/kevinpeno/bash",
  "repository": {
    "type": "git",
    "url": "https://github.com/kevinpeno/bash.git"
  },
  "main": "",
  "scripts": {
    "init": "rimraf .validate.json && rimraf .jshintrc",
    "clean": "rimraf build",
    "clear": "node scripts/clearConsole.js",
    "lint": "eslint src test",
    "prebuild": "npm run clean",
    "build": "npm run build:webpack && npm run build:min && npm run build:doc",
    "build:webpack": "node scripts/buildWebpack.js",
    "build:min": "node scripts/buildProduction.js",
    "build:doc": "doctoc --github --title \"## Contents\" ./",
    "start": "webpack --watch",
    "test": "blue-tape test/*.js",
    "test:circleci": "blue-tape test/*.js | tap-xunit > $CIRCLE_TEST_REPORTS/test_result.xml",
    "cov": "npm run cov:clean && npm run cov:generate",
    "cov:clean": "rimraf coverage",
    "cov:generate": "isparta cover --report text --report html test/index.js",
    "prepublish": "npm run build",
    "validate": "npm run lint && npm run build && npm test",
    "validate-dev": "npm run lint && npm run build && npm test | faucet",
    "audit": "nsp check",
    "deps": "npm run deps:missing && npm run deps:extra",
    "deps:missing": "dependency-check ./package.json",
    "deps:extra": "dependency-check ./package.json --extra --no-dev --ignore",
    "precheck": "npm run validate",
    "check": "npm run audit && npm run deps && npm outdated --depth 0",
    "watch": "watch \"npm run clear && npm run lint -s && npm run test -s\" test/ src/"
  },
  "pre-commit": [
    "lint",
    "test",
    "cov"
  ],
  "devDependencies": {
    "blue-tape": "^0.1.11",
    "dependency-check": "^2.5.1",
    "doctoc": "^0.15.0",
    "eslint": "^1.10.3",
    "eslint-loader": "^1.2.1",
    "faucet": "0.0.1",
    "isparta": "^4.0.0",
    "node-libs-browser": "^1.0.0",
    "nsp": "^2.2.0",
    "precommit-hook": "^3.0.0",
    "rimraf": "^2.5.1",
    "tap-xunit": "^1.3.1",
    "watch": "^0.17.1",
    "webpack": "^1.12.12"
  },
  "engine": "node >= 5.5.0"
}
